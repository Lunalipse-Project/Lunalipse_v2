                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" 
                                                    From="{Binding Path=ItemHovered.Color,ElementName=CATA_LIST}" 
                                                    To="{Binding Path=ItemUnhovered.Color,ElementName=CATA_LIST}"
                                                 Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </local:CatalogueSelectionListItem.Triggers>
            </local:CatalogueSelectionListItem>
            <local:CatalogueSelectionListItem Grid.Row="4"  x:Name="AllMusic" Background="{StaticResource ItemUnhoverColorDefault}" Width="auto" Height="48" MouseDown="ItemConatiner_MouseDown" Tag="ALL_MUSIC">
                <local:CatalogueSelectionListItem.Triggers>
                    <EventTrigger RoutedEvent="UIElement.MouseEnter">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" 
                                                    From="{Binding Path=ItemUnhovered.Color,ElementName=CATA_LIST}"
                                                    To="{Binding Path=ItemHovered.Color,ElementName=CATA_LIST}"
                                                 Duration="0:0:.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="UIElement.MouseLeave">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
